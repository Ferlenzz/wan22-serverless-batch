{
  "name": "wan22-serverless-batch",
  "category": ["Video"],
  "readme_path": "README.md",
  "inputs": [
    { "name": "action", "type": "string", "default": "enq", "description": "enq | result | health" },
    { "name": "job_id", "type": "string", "description": "для action=result" },
    { "name": "user_id", "type": "string", "default": "anon" },
    { "name": "prompt", "type": "string", "required": true },
    { "name": "image_base64", "type": "string" },
    { "name": "image_path", "type": "string" },
    { "name": "last_image_base64", "type": "string" },
    { "name": "last_image_path", "type": "string" },
    { "name": "reuse_last_image", "type": "boolean", "default": false },
    { "name": "width", "type": "number", "default": 480 },
    { "name": "height", "type": "number", "default": 832 },
    { "name": "length", "type": "number", "default": 64 },
    { "name": "steps", "type": "number", "default": 8 },
    { "name": "cfg", "type": "number", "default": 2.0 }
  ],
  "env": [
    { "name": "RP_VOLUME", "value": "/runpod-volume" },
    { "name": "WAN_CKPT_DIR", "value": "/runpod-volume/models/Wan2.2-TI2V-5B" },
    { "name": "BATCH_MAX_SIZE", "value": "20" },
    { "name": "BATCH_LINGER_SEC", "value": "5" }
  ]
}
